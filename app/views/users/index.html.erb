<p id="notice"><%= notice %></p>

<h1><%= translate_language(params[:locale], 'Users') %></h1>

<table>
  <thead>
    <tr>
      <th><%= translate_language(params[:locale], 'Name') %></th>
      <th><%= translate_language(params[:locale], 'Email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to (translate_language(params[:locale], 'Show')), user %></td>
        <td><%= link_to (translate_language(params[:locale], 'Edit')), edit_user_path(user) %></td>
        <td><%= link_to (translate_language(params[:locale], 'Destroy')), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to (translate_language(params[:locale], 'New User')), new_user_path %>
